<UserControl x:Class="Meals.Control.ToggleButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Meals"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Viewbox>
            <StackPanel Orientation="Horizontal">
                <Grid>
                    <Rectangle x:Name="Back" Fill="#FFA0A0A0" Height="56" Width="96" 
                               RadiusX="29" RadiusY="29" MouseLeftButtonDown="ToggleButton_Click"/>
                    <Ellipse x:Name="Dot" Fill="White" Height="42" Width="42" 
                              MouseLeftButtonDown="ToggleButton_Click"/>
                </Grid>
                <TextBlock x:Name="tbStatus"
                           FontSize="50" FontWeight="Bold"
                           VerticalAlignment="Center" Margin="40 0 0 0"/>
            </StackPanel>
        </Viewbox>
    </Grid>
</UserControl>